@model SuperLibrary.Web.Models.BookViewModel

@{
    ViewData["Title"] = "New Book";
}

<h1>New Book</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Books"/>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-floppy-disk"></i> Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-chevron-left"></i> Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
