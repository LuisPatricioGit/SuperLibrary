@model IEnumerable<SuperLibrary.Web.Data.Entities.Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Library Books</h2>
    @if (Model.Any())
    {
        <div id="booksCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var book = Model.ElementAt(i);
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row justify-content-center">
                            <div class="col-md-4 text-center">
                                <img src="@Url.Content(book.ImageFullPath)" class="d-block w-100" alt="@book.Title" style="max-height:400px; object-fit:contain;" />
                                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                                    <h5>@book.Title</h5>
                                    <p>by @book.Author</p>
                                    <p><small>@book.Publisher (@book.ReleaseYear?.Year)</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#booksCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#booksCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">No books available in the library.</div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            $('#booksCarousel').carousel();
        });
    </script>
}
