@model IEnumerable<SuperLibrary.Web.Data.Entities.Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Featured Books</h2>
    @if (Model.Any())
    {
        <div id="booksCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var book = Model.ElementAt(i);
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="d-flex justify-content-center">
                            <div class="card shadow-sm" style="width: 24rem;">
                                <img src="@Url.Content(book.ImageFullPath)" class="card-img-top" alt="@book.Title" style="max-height:400px; object-fit:contain;" />
                                <div class="card-body bg-light">
                                    <h5 class="card-title">@book.Title</h5>
                                    <p class="card-text mb-1"><strong>Author:</strong> @book.Author</p>
                                    <p class="card-text mb-1"><strong>Publisher:</strong> @book.Publisher</p>
                                    <p class="card-text mb-1"><strong>Year:</strong> @(book.ReleaseYear?.Year)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Visible navigation buttons below the carousel -->
            <div class="d-flex justify-content-center mt-3">
                <button class="btn btn-primary mr-2" type="button" data-target="#booksCarousel" data-slide="prev">
                    <i class="fa fa-arrow-left"></i> Previous
                </button>
                <button class="btn btn-primary" type="button" data-target="#booksCarousel" data-slide="next">
                    Next <i class="fa fa-arrow-right"></i>
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">No books available in the library.</div>
    }
</div>

@section Scripts {
    <script>
        $(function () {
            $('#booksCarousel').carousel();
            // Optional: allow button click to control carousel
            $("[data-slide='prev']").click(function () {
                $('#booksCarousel').carousel('prev');
            });
            $("[data-slide='next']").click(function () {
                $('#booksCarousel').carousel('next');
            });
        });
    </script>
}
