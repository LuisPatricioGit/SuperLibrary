@model SuperLibrary.Web.Models.UserViewModel
@using SuperLibrary.Web.Models
@{
    ViewData["Title"] = "My Profile";
    var statusMessage = ViewBag.StatusMessage as string;
}

<h1>My Profile</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.Username</dd>
                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>
                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Model.LastName</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@ViewBag.ProfileImageUrl" alt="Profile Picture" style="width:300px;height:300px;max-width:100%;height:auto;border-radius:10px;object-fit:cover;" />
            <form asp-action="ChangeProfilePicture" method="post" enctype="multipart/form-data" class="mt-2">
                <input type="file" name="profilePicture" accept="image/*" class="form-control mb-2" />
                <button type="submit" class="btn btn-sm btn-primary">Change Picture</button>
            </form>
        </div>
    </div>
</div>
<div class="mt-3">
    <a asp-action="ChangeUser" class="btn btn-outline-warning">Edit Profile</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Back</a>
</div>
@if (!string.IsNullOrEmpty(statusMessage))
{
    <div class="alert alert-info mt-3">@statusMessage</div>
}
