@model SuperLibrary.Web.Models.AddItemViewModel
@{
    ViewData["Title"] = "Add Book";
}

<h3>Add Book</h3>
<h4>To Loan</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" asp-items="Model.Books" class="form-control"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"> </label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-plus"></i> Add</button>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-chevron-left"></i> Return</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}